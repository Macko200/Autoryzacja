@model CzasPracyDTO

<h1>Edytuj czas pracy</h1>

<form asp-action="Edit" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Data">Data</label>
        <input asp-for="Data" class="form-control" type="date" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rozpoczecie">Godzina rozpoczęcia</label>
        <input asp-for="Rozpoczecie" class="form-control" />
        <span asp-validation-for="Rozpoczecie" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Zakonczenie">Godzina zakończenia</label>
        <input asp-for="Zakonczenie" class="form-control" />
        <span asp-validation-for="Zakonczenie" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PracaZdalna">Praca zdalna</label>
        <input asp-for="PracaZdalna" type="checkbox" />
    </div>
    <button type="submit" class="btn btn-primary">Zapisz</button>
    <a asp-action="Index">Anuluj</a>
</form>
